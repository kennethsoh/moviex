<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <include
        android:id="@+id/topbar"
        layout="@layout/topbar"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="@string/Explore"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <Button
        android:id="@+id/toprated"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="127dp"
        android:onClick="openTopRatedFrag"
        android:text="@string/topRated"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topbar"
        app:layout_constraintVertical_bias="0.198" />


    <Button
        android:id="@+id/upcomingMovies"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toprated"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5sp"
        android:onClick="openUpcomingFrag"
        android:text="@string/upcomingMovies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topbar" />

    <Button
        android:id="@+id/movieSoundtracks"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upcomingMovies"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5sp"
        android:onClick="openSoundtrackList"
        android:text="@string/MovieSoundtracks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topbar" />

    <Button
        android:id="@+id/buyTicketsFromGV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieSoundtracks"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5sp"
        android:onClick="buyTicketsFromGV"
        android:text="@string/GVtickets"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topbar" />

    <Button
        android:id="@+id/buyTicketsFromShaw"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buyTicketsFromGV"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5sp"
        android:onClick="buyTicketsFromShaw"
        android:text="@string/Shawtickets"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topbar" />




</RelativeLayout>